<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <!-- Text Message -->
    <TextView
        android:id="@+id/text_message_body_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/bg_message_sent"
    android:textColor="@android:color/white"
    android:text="A sample message sent."
    android:maxWidth="250dp"/>

    <!-- Voice Note Button -->
    <ImageView
        android:id="@+id/play_voice_note_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vm"
    android:visibility="gone"
    android:padding="8dp"/>

    <ImageView
        android:id="@+id/image_message_sent"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:visibility="gone"
        android:layout_marginTop="8dp"/>




    <TextView
        android:id="@+id/file_name_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="file_example.pdf"
        android:textColor="@android:color/black"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:id="@+id/video_thumbnail_sent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_marginTop="8dp"/>


</LinearLayout>