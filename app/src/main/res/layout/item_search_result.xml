<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#ffffff">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivMentorImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tvMentorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ivMentorImage"
                android:layout_alignTop="@id/ivMentorImage"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:textStyle="bold"
                android:text="Mentor Name"/>

            <TextView
                android:id="@+id/tvMentorDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvMentorName"
                android:layout_toEndOf="@id/ivMentorImage"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:text="Mentor Description"/>

            <TextView
                android:id="@+id/tvMentorPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvMentorDescription"
                android:layout_toEndOf="@id/ivMentorImage"
                android:textColor="#FFD700"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:text="Mentor Price"/>

            <ImageView
                android:id="@+id/ivHeart"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tvMentorPrice"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="-17dp"
                android:src="@drawable/heart" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
