<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_message_body_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bg_message_received"
        android:textColor="@android:color/black"
        android:text="A sample message received." />

    <ImageView
        android:id="@+id/play_voice_note_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vm"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_message_recieve"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:visibility="gone"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/file_name_recieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="10dp"
        android:text="file_example.pdf"
        android:textColor="@android:color/black"
        android:background="@drawable/bg_message_sent"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/video_thumbnail_recieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="8dp"/>


</LinearLayout>
